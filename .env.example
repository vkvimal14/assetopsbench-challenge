# AssetOpsBench Configuration
# Copy this file to .env and fill in your actual values

# Watsonx.ai API Configuration
WATSONX_API_KEY=your_watsonx_api_key_here
WATSONX_PROJECT_ID=your_project_id_here
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# Model Configuration
DEFAULT_MODEL=meta-llama/llama-3-70b-instruct
TEMPERATURE=0.1
MAX_TOKENS=2000

# Data Configuration
DATA_DIR=./data
RESULTS_DIR=./results
LOGS_DIR=./logs
SUBMISSIONS_DIR=./submissions

# System Configuration
DEBUG=True
LOG_LEVEL=INFO
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Optional: Database Configuration (if needed)
# DATABASE_URL=sqlite:///assetops.db
# REDIS_URL=redis://localhost:6379

# Optional: External API Configuration
# IOT_API_URL=https://iot-api.example.com
# TSFM_API_URL=https://tsfm-api.example.com
# WORKORDER_API_URL=https://workorder-api.example.com